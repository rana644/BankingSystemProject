@{
    ViewData["Title"] = "Home";
}

<style>
    .nbe-bg-gradient {
        background: linear-gradient(to right, #006943, #024d33);
        color: white;
    }

    .btn-nbe-gold {
        background-color: #F8A01D;
        color: white;
        border: none;
    }

        .btn-nbe-gold:hover {
            background-color: #e08f1a;
        }

    .hero-image {
        max-height: 350px;
        filter: drop-shadow(0 0 6px rgba(0, 0, 0, 0.2));
    }

    .text-nbe {
        color: #006943;
    }

    .feature-icon {
        font-size: 2rem;
        color: #006943;
    }

    .feature-card {
        border: none;
        background: #f8f9fa;
        border-radius: 1rem;
        transition: 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(0, 105, 67, 0.15);
        }
</style>

<div class="container py-5">
    <!-- HERO SECTION -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold text-success mb-4">
                Welcome to <span class="text-nbe">NBE Digital Banking</span>
            </h1>
            <p class="lead text-dark mb-4">
                Trusted by millions. Experience secure, seamless banking from anywhere in the world.
            </p>

            <div class="d-flex flex-wrap gap-3">
                <a asp-controller="AccountRequest" asp-action="CreateRequest" class="btn btn-outline-success btn-lg rounded-pill px-4 shadow-sm">
                    <i class="bi bi-person-plus-fill me-2"></i> Request Account
                </a>

                <a asp-controller="Auth" asp-action="Login" class="btn btn-nbe-gold btn-lg rounded-pill px-4 shadow-sm">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                </a>
            </div>
        </div>

        <div class="col-md-6 text-center mt-4 mt-md-0">
            <img src="~/images/banking-illustration2.png" alt="Banking illustration" class="img-fluid hero-image" />
        </div>
    </div>

    <!-- FEATURES SECTION -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="p-4 feature-card shadow-sm h-100">
                <div class="feature-icon mb-3">
                    <i class="bi bi-lock-fill"></i>
                </div>
                <h5 class="fw-semibold">Secure Transactions</h5>
                <p class="text-muted">Advanced encryption ensures your money and data are safe 24/7.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 feature-card shadow-sm h-100">
                <div class="feature-icon mb-3">
                    <i class="bi bi-phone-fill"></i>
                </div>
                <h5 class="fw-semibold">Mobile Friendly</h5>
                <p class="text-muted">Bank on-the-go with our responsive, mobile-optimized platform.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 feature-card shadow-sm h-100">
                <div class="feature-icon mb-3">
                    <i class="bi bi-cash-coin"></i>
                </div>
                <h5 class="fw-semibold">Multi-Currency Support</h5>
                <p class="text-muted">Send and receive payments in various currencies with ease.</p>
            </div>
        </div>
    </div>

    <!-- TRUSTED SECTION -->
    <div class="text-center mt-4">
        <h5 class="text-muted">Trusted by over <span class="fw-bold text-success">10 million users</span> worldwide</h5>
        <p class="small text-secondary">Part of Egypt’s most reliable and long-standing banking institutions.</p>
    </div>
</div>
