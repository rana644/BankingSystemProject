@{
    ViewData["Title"] = "Login";
}

<style>
    .bg-nbe {
        background-color: #006943;
    }

    .btn-nbe-gold {
        background-color: #F8A01D;
        color: white;
        border: none;
    }

        .btn-nbe-gold:hover {
            background-color: #e08f1a;
        }

    .nbe-form-shadow {
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
    }

    .card-zoom {
        transition: transform 0.3s ease;
    }

        .card-zoom:hover {
            transform: scale(1.015);
        }

    .form-floating label {
        color: #6c757d;
    }

    .text-nbe {
        color: #006943;
    }

    .show-password-toggle {
        position: absolute;
        right: 1.25rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #aaa;
    }

    .form-password-group {
        position: relative;
    }

    .login-logo {
        font-size: 2.5rem;
        color: #F8A01D;
    }
</style>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card nbe-form-shadow rounded-4 overflow-hidden card-zoom">

                    <!-- Card Header -->
                    <div class="card-header bg-nbe text-white text-center py-4">
                        <div class="d-flex align-items-center justify-content-center">
                            <i class="bi bi-bank2 login-logo me-2"></i>
                            <h3 class="fw-bold mb-0">NBE Digital Banking</h3>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-4 p-md-5">
                        <h4 class="text-center mb-3 text-nbe">Welcome Back</h4>
                        <p class="text-muted text-center mb-4">Log in to your secure banking account</p>

                        <!-- Alerts -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show text-center mb-4">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show text-center mb-4">
                                @ViewBag.Error
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Login Form -->
                        <form asp-controller="Auth" asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required />
                                <label for="email"><i class="bi bi-envelope-fill me-2 text-nbe"></i>Email address</label>
                                <div class="invalid-feedback">Please provide a valid email.</div>
                            </div>

                            <div class="form-floating mb-4 form-password-group">
                                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required />
                                <label for="password"><i class="bi bi-lock-fill me-2 text-nbe"></i>Password</label>
                                <i class="bi bi-eye-slash-fill show-password-toggle" id="togglePassword"></i>
                                <div class="invalid-feedback">Please enter your password.</div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-nbe-gold btn-lg rounded-3 fw-bold shadow-sm">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                                </button>
                            </div>

                            <div class="text-center mb-3">
                                <p class="text-muted">
                                    Forgot password?
                                    <a asp-controller="Auth" asp-action="ForgotPassword" class="text-decoration-none fw-semibold">Reset here</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Don’t have an account?
                        <a asp-controller="AccountRequest" asp-action="CreateRequest" class="text-decoration-none fw-semibold text-nbe">Request one</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', e => {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Toggle Password Visibility
            const togglePassword = document.getElementById('togglePassword');
            const passwordField = document.getElementById('password');

            togglePassword.addEventListener('click', function () {
                const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordField.setAttribute('type', type);
                this.classList.toggle('bi-eye-fill');
                this.classList.toggle('bi-eye-slash-fill');
            });
        })();
    </script>
}
